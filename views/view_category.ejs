<%- include('header') %>
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive table--no-card m-b-30">
                            <form class="form-header">
                                <input class="au-input au-input--xl" type="text" name="search"
                                    placeholder="Search for datas &amp; reports..." />
                                <button class="au-btn--submit" type="submit" name="searching">
                                    <i class="zmdi zmdi-search"></i>
                                </button>
                            </form>
                            <form action="/category/multDel" method="post">
                                <table class="table table-borderless table-striped table-earning">
                                    <thead>
                                        <tr>
                                            <th>
                                                <input type="checkbox" id="multidelet">
                                                <input type="submit" value="Delete" style="border: 1px solid red;">
                                            </th>
                                            <th>No.</th>
                                            <th>Category</th>
                                            <th>Status</th>
                                            <th class="text-right">Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>

                                        <% for(var ad of data){ %>
                                            <tr>
                                                <td><input type="checkbox" name="multDel[]" class="singleDelet"
                                                        value="<%=ad.id%>"></td>
                                                <td>1</td>
                                                <td>
                                                    <%=ad.category%>
                                                </td>
                                                <td>
                                                    <%if(ad.isActive) {%>
                                                        <a href="?id=<%= ad.id %>&isActive=deactive&search=<%= search %>&page=<%= cpage %>"
                                                            style="color: green;">Active</a>
                                                        <% } else { %>
                                                            <a href="?id=<%= ad.id %>&isActive=active&search=<%= search %>&page=<%= cpage %>"
                                                                style="color: red;">Deactive</a>
                                                            <% } %>
                                                </td>
                                                <td class="text-right">
                                                    <a href="/category/deletcatRec/<%=ad.id%>"
                                                        style="color: red;">Delete</a> ||
                                                    <a href="/category/updateofferRec/?id=<%=ad.id%>"
                                                        style="color: green;">Update</a>
                                                </td>
                                            </tr>

                                            <% } %>
                                                <tr>
                                                    <td>
                                                        <nav aria-label="Page navigation example">
                                                            <ul class="pagination">
                                                                <% var pageNum=cpage %>

                                                                    <% var pre=--pageNum %>
                                                                        <% if(pre>0) {%>
                                                                            <li class="page-item"><a class="page-link"
                                                                                    href="?page=<%= pre%>&search=<%= search %>">Previous</a>
                                                                            </li>
                                                                            <% } %>
                                                                                <li class="page-item"><a
                                                                                        class="page-link"
                                                                                        href="<%= cpage%>&search=<%= search %>">
                                                                                        <%=cpage%>
                                                                                    </a>
                                                                                </li>
                                                                                <% var next=++cpage %>

                                                                                    <% if(cpage <=pagesData){ %>
                                                                                        <li class="page-item"><a
                                                                                                class="page-link"
                                                                                                href="?page=<%= next %>&search=<%= search %>">Next</a>
                                                                                        </li>
                                                                                        <% } %>
                                                            </ul>
                                                        </nav>
                                                    </td>
                                                </tr>
                                    </tbody>
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('footer') %>