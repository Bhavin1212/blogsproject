<%- include('header') %>
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive table--no-card m-b-30">
                            <table class="table table-borderless table-striped table-earning">
                                <thead>
                                    <tr>
                                        <th>No</th>
                                        <th>Name</th>
                                        <th>Email</th>
                                        <th class="text-right">Gender</th>
                                        <th class="text-right">Hobby</th>
                                        <th class="text-right">City</th>
                                        <th>images</th>
                                        <th>Action</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% for(var ad of Allrecords){ %>
                                        <tr>
                                            <td>1</td>
                                            <td>
                                                <%= ad.name %>
                                            </td>
                                            <td>
                                                <%= ad.email %>
                                            </td>
                                            <td>
                                                <%= ad.gender %>
                                            </td>
                                            <td>
                                                <%= ad.hobby %>
                                            </td>
                                            <td>
                                                <%= ad.city %>
                                            </td>
                                            <td>
                                                <img src="<%= ad.image %>" height="100" width="100">
                                            </td>
                                            <td><a href="/deleterecord/<%= ad.id %>">Delete</a> ||
                                                <a href="/updaterecord/?id=<%= ad.id %>">Update</a>
                                            </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <%- include('footer') %>