<%- include('header') %>
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive table--no-card m-b-30">
                            <form class="form-header">
                                <input class="au-input au-input--xl" type="text" name="search"
                                    placeholder="Search for datas &amp; reports..." />
                                <button class="au-btn--submit" type="submit" name="searching">
                                    <i class="zmdi zmdi-search"></i>
                                </button>
                            </form>
                            <form action="/offer/mulDel" method="post">
                                <table class="table table-borderless table-striped table-earning first text-left ">
                                    <thead>
                                        <tr>
                                            <th>
                                                <input type="checkbox" id="multidelet">
                                                <input type="submit" value="delet">
                                            </th>
                                            <th>icon</th>
                                            <th>title</th>
                                            <th>Description</th>
                                            <th>Status</th>
                                            <th>Action</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% for(var od of offerdata) {%>
                                            <tr>
                                                <td><input type="checkbox" name="mulDel[]" class="singleDelet"
                                                        value="<%= od.id %>"></td>
                                                <td>
                                                    <%= od.icon %>
                                                </td>
                                                <td>
                                                    <%= od.title %>
                                                </td>
                                                <td>
                                                    <%= od.content %>
                                                </td>
                                                <td>
                                                    <% if(od.isActive) {%>
                                                        <a
                                                            href="?id=<%= od.id %>&status=deActive&search=<%= search %>&page=<%= cpage %>">Active</a>
                                                        <% } else { %>
                                                            <a
                                                                href="?id=<%= od.id %>&status=Active&search=<%= search %>&page=<%= cpage %>">Deactive</a>
                                                            <% } %>
                                                </td>
                                                <td><a href="/offer/deleterecord/<%= od.id %>">Delete</a> ||
                                                    <a href="/offer/updaterecord/?id=<%= od.id %>">Update</a>
                                                </td>
                                            </tr>
                                            <% } %>
                                                <tr>
                                                    <td>
                                                        <nav aria-label="Page navigation example">
                                                            <ul class="pagination">
                                                                <% var parpagrecords=cpage %>
                                                                    <% var pre=--parpagrecords %>
                                                                        <% if(pre>0) { %>
                                                                            <li class="page-item"><a class="page-link"
                                                                                    href="?page=<%= pre%>&search=<%= search %>">Previous</a>
                                                                            </li>
                                                                            <% } %>
                                                                                <li class="page-item"><a
                                                                                        class="page-link"
                                                                                        href="<%= cpage%>&search=<%= search %>">
                                                                                        <%=cpage%>
                                                                                    </a>
                                                                                </li>
                                                                                <% var next=++cpage %>
                                                                                    <% if(cpage<=PageData){ %>
                                                                                        <li class="page-item"><a
                                                                                                class="page-link"
                                                                                                href="?page=<%= next %>&search=<%= search %>">Next</a>
                                                                                        </li>
                                                                                        <% } %>
                                                            </ul>
                                                        </nav>
                                                    </td>
                                                </tr>
                                    </tbody>
                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('footer') %>