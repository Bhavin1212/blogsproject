<%- include('header') %>
    <div class="main-content">
        <div class="section__content section__content--p30">
            <div class="container-fluid">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="table-responsive table--no-card m-b-30">
                            <form class="form-header">
                                <input class="au-input au-input--xl" type="text" name="search"
                                    placeholder="Search for datas &amp; reports..." />
                                <button class="au-btn--submit" type="submit" name="searching">
                                    <i class="zmdi zmdi-search"></i>
                                </button>
                            </form>
                            <form action="/comment/mulDel" method="post">
                                <table class="table table-borderless table-stblped table-earning first text-left ">
                                    <thead>
                                        <tr>
                                            <th>
                                                <input type="checkbox" id="multidelet">
                                                <input type="submit" value="delet">
                                            </th>
                                            <th>name</th>
                                            <th>email</th>
                                            <th>date</th>
                                            <th>comment</th>
                                            <th>Status</th>
                                        </tr>
                                    </thead>
                                    <tbbly>
                                        <% for(var cm of commentrecords){ %>
                                            <tr>
                                                <td><input type="checkbox" name="mulDel[]" class="singleDelet"
                                                        value="<%= cm.id %>">
                                                </td>
                                                <td>
                                                    <%=cm.name%>
                                                </td>
                                                <td>
                                                    <%=cm.email%>
                                                </td>
                                                <td>
                                                    <%=cm.date%>
                                                </td>
                                                <td>
                                                    <%=cm.comment%>
                                                </td>
                                                <td>
                                                    <% if(cm.isActive) {%>
                                                        <a
                                                            href="?id=<%= cm.id %>&status=deActive&search=<%= search %>&page=<%= cpage %>">Active</a>
                                                        <% } else { %>
                                                            <a
                                                                href="?id=<%= cm.id %>&status=Active&search=<%= search %>&page=<%= cpage %>">Deactive</a>
                                                            <% } %>
                                                </td>

                                            </tr>
                                            <% } %>
                                    </tbbly>
                                    <tr>
                                        <td>
                                            <nav aria-label="Page navigation example">
                                                <ul class="pagination">
                                                    <% var parpagrecords=cpage %>
                                                        <% var pre=--parpagrecords %>
                                                            <% if(pre>0) { %>
                                                                <li class="page-item"><a class="page-link"
                                                                        href="?page=<%= pre%>&search=<%= search %>">Previous</a>
                                                                </li>
                                                                <% } %>
                                                                    <li class="page-item"><a
                                                                            class="page-link"
                                                                            href="<%= cpage%>&search=<%= search %>">
                                                                            <%=cpage%>
                                                                        </a>
                                                                    </li>
                                                                    <% var next=++cpage %>
                                                                        <% if(cpage<=PageData){ %>
                                                                            <li class="page-item"><a
                                                                                    class="page-link"
                                                                                    href="?page=<%= next %>&search=<%= search %>">Next</a>
                                                                            </li>
                                                                            <% } %>
                                                </ul>
                                            </nav>
                                        </td>
                                    </tr>

                                </table>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <%- include('footer') %>